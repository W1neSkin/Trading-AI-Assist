    <Style x:Key="ModernDataGridTemplateColumn" TargetType="DataGridTemplateColumn">
        <Setter Property="CellTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Style="{StaticResource IconButton}" 
                                Content="âœï¸" 
                                ToolTip="Edit"
                                Margin="0,0,4,0"/>
                        <Button Style="{StaticResource IconButton}" 
                                Content="ðŸ—‘ï¸" 
                                ToolTip="Delete"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Status Column Style -->
    <Style x:Key="StatusColumnStyle" TargetType="DataGridTemplateColumn">
        <Setter Property="CellTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Width="8" Height="8" 
                            CornerRadius="4" 
                            Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"
                            Margin="0,0,8,0"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary> 